{% extends 'base.html.twig' %}

{% block title %}{{ app.user.firstname }}&nbsp;{{ app.user.name }}{% endblock %}

{% block body %}
<div class="grid grid-cols-12 gap-4 mt-1">
    <div class="col-span-2">
        {% include '/_components/sidebar.html.twig' %}
    </div>
    <div class="col-span-10 mt-8 mb-10">
        <div class="bg-neutral-50 shadow-sm shadow-gray-400 overflow-hidden shadow rounded-lg border ml-2 mr-5">
            <div class="px-4 py-3 sm:px-6">
                <h3 class="text-lg text-justify leading-6 font-medium text-cyan-800">
                    User Profile
                </h3>
                <p class="mt-1 max-w-2xl text-lg text-cyan-700">
                    Information about {{ app.user.firstname }}&nbsp;{{ app.user.name }}
                </p>
            </div>
            <div class="border-t border-cyan-700 px-4 py-5 sm:p-0">
                <dl class="sm:divide-y sm:divide-gray-200">
                    <div class="py-2.5 sm:py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Email address:
                        </dt>
                        <dd class="mt-1 text-lg text-cyan-700 sm:mt-0 sm:col-span-2">
                            {{ app.user.email }}
                        </dd>
                    </div>
                    <div class="py-2.5 sm:py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Full name:
                        </dt>
                        <dd class="mt-1 text-lg text-cyan-700 sm:mt-0 sm:col-span-2">
                            {{ app.user.firstname }}&nbsp;{{ app.user.name }}
                        </dd>
                    </div>
                </dl>
            </div>
            <div class="border-t border-cyan-700 px-4 py-5 sm:p-0">
            <div class="px-4 py-3 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-cyan-800">
                    Announces:
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    {% if app.user.annonces|length == 1  %}
                    link to your {{ app.user.annonces | length }} announce
                    {% elseif app.user.annonces | length > 1 %}
                    link to yours {{ app.user.annonces | length }} announces
                    {% else %}
                    you don't have any announce.
                    {% endif %}
                </p>
            </div>
                <div class="border-t border-cyan-700 px-4 py-5 sm:p-0">
                    <dl class="sm:divide-y sm:divide-gray-200">
                        {% for annonce in app.user.annonces  %}
                        <div class="py-2.5 sm:py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">
                               Announce nÂ° {{ loop.index }}
                            </dt>
                            <dd class="mt-1 text-cyan-800 sm:mt-0 sm:col-span-2">
                                <a href="{{ path('announce_show',{slug:annonce.slug}) }}" class="text-cyan-700 text-sm justify-center rounded hover:text-cyan-800" >{{ annonce.title }} {# mettre lien vers annonce #}</a>
                            </dd>
                            </div>
                        {% endfor %}

                    </dl>
                </div>
        </div>
    </div>
    </div>
</div>
{% endblock %}
